{
  "name": "json-to-ts-type",
  "displayName": "JSON to TS Type",
  "description": "Generate TypeScript, Zod, JSON Schema, and GraphQL types from JSON, YAML, JSON5, CSV, and JSON Lines",
  "publisher": "AbdulOwhab",
  "version": "2.0.1",
  "icon": "ext-icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateTypeFromJson",
        "title": "Generate Types/Schemas from JSON"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.generateTypeFromJson",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "publish:major": "vsce publish major",
    "publish:minor": "vsce publish minor",
    "publish:patch": "vsce publish patch",
    "compile": "webpack",
    "build": "vsce package --no-dependencies",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/browser-or-node": "^1.3.2",
    "@types/is-url": "^1.2.32",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "18",
    "@types/pako": "^2.0.4",
    "@types/pluralize": "^0.0.33",
    "@types/readable-stream": "^4.0.21",
    "@types/underscore": "^1.13.0",
    "@types/unicode-properties": "^1.3.2",
    "@types/urijs": "^1.19.25",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "quicktype-core": "^23.2.6",
    "zod": "^3.22.4",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "csv-parse": "^5.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Owhab/json-to-ts-type.git"
  }
}
